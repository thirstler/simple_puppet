restrict default kod nomodify notrap nopeer noquery
restrict -6 default kod nomodify notrap nopeer noquery
<% if @time_source == true %>restrict <%= @time_network %> nomodify notrap<% end %>
restrict 127.0.0.1
restrict -6 ::1
<% @time_servers.each do |tserver| %>server <%= tserver %>
<% end %> 
<% @time_peers.each do |peer| %>server <%= peer %>
<% end %>
driftfile /var/lib/ntp/drift
keys /etc/ntp/keys

